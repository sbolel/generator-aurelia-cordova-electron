{
  "extends" : [
    "standard",
    "./node_modules/aurelia-tools/.eslintrc.json"
  ],
  "plugins": [
    "babel"
  ],
  "env"     : {
    "browser" : true,
    "es6": true,
    "mocha": true,
    "chai": true
  },
  "globals" : {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__COVERAGE__" : false,
    "__BASENAME__" : false
  },
  "rules": {
    "semi" : [2, "never"],
    "max-len": [2, 120, 2]
  },
  "root": true
}
